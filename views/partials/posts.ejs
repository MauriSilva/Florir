<main>
    <div class="posts-container">
        <% if (posts.length > 0) { %>
          <% posts.forEach(post => { %>
            <div class="post-card">
              <img src="<%= post.image %>" alt="<%= post.title %>">
              <div class="post-info">
                <h3><%= post.title %></h3>
                <p><%= post.summary %></p>
                <a href="/posts/<%= post.id %>">Ler mais</a>
              </div>
            </div>
          <% }) %>
        <% } else { %>
          <p>Nenhum artigo dispon√≠vel no momento.</p>
        <% } %>
      </div>
</main>