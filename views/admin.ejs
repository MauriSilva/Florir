<%- include("partials/layout") %>
<%- include("partials/header") %>

  <main class="glass-container">


<h2>Painel de Administração</h2>
<table class="admin-table">
  <thead>
    <tr>
      <th>Título</th>
      <th>Resumo</th>
      <th>Ações</th>
    </tr>
  </thead>
  <tbody>
    <% posts.forEach(post => { %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.summary %></td>
        <td>
          <a href="/admin/edit/<%= post.id %>" class="btn-edit">Editar</a>
          <form action="/admin/deletar/<%= post.id %>" method="POST" style="display:inline;">
            <button type="submit" class="btn-delete" onclick="return confirm('Tem certeza que deseja excluir este post?');">Excluir</button>
          </form>
        </td>
      </tr>
    <% }) %>
  </tbody>
</table>

</main>
<%- include("partials/footer") %>
