      }

      .admin-table th {
        background-color: rgba(255, 255, 255, 0.5);
        font-weight: 600;
      }

      .admin-actions {
        display: flex;
        gap: 1rem;
        justify-content: center;
        margin-bottom: 2rem;
        flex-wrap: wrap;
      }

      .btn-admin-create {
        background-color: var(--primary);
        color: white;
      }

      .btn-admin-comments {
        background-color: #f39c12;
