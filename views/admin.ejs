    <main class="container" style="max-width: 1000px; margin: 4rem auto;">

      <div class="glass-card" style="margin-bottom: 2rem;">
        <div class="admin-header text-center">
          <h2 style="margin-bottom: 1.5rem;">Painel de Administração</h2>
          <div class="admin-actions">
            <a href="/admin/create" class="btn btn-admin-create">
              <i class="fa-solid fa-plus"></i> Criar Novo Post
            </a>
            <a href="/admin/comentarios" class="btn btn-admin-comments">
              <i class="fa-solid fa-comments"></i> Gerenciar Comentários
            </a>
            <a href="/admin/users/create" class="btn" style="background-color: #2c3e50; color: white;">
              <i class="fa-solid fa-user-plus"></i> Criar Usuário
            </a>
          </div>
        </div>
      </div>

      <div class="glass-card">
        <h3 style="color: #8e44ad; text-align: center; margin-bottom: 1.5rem;">Posts Cadastrados</h3>
        <div class="table-responsive">
          <table class="admin-table">
            <thead>
              <tr>
                <th
                  style="padding: 1rem; text-align: left; border-bottom: none; color: white; font-weight: bold; background-color: #8e44ad; border-top-left-radius: 8px;">
                  Título</th>
                <th
                  style="padding: 1rem; text-align: left; border-bottom: none; color: white; font-weight: bold; background-color: #8e44ad;">
                  Categoria</th>
                <th
                  style="padding: 1rem; text-align: left; border-bottom: none; color: white; font-weight: bold; background-color: #8e44ad; border-top-right-radius: 8px;">
                  Ações</th>
              </tr>
            </thead>
            <tbody>
              <% posts.forEach(post=> { %>
                <tr>
                  <td style="padding: 10px; border-bottom: 1px solid #eee;">
                    <%= post.title %>
                  </td>
                  <td style="padding: 10px; border-bottom: 1px solid #eee;">
                    <span
                      style="background-color: #e25388; color: white; padding: 2px 8px; border-radius: 12px; font-size: 0.85em;">
                      <%= post.category || 'Geral' %>
                    </span>
                  </td>
                  <td class="actions-cell" style="padding: 10px; border-bottom: 1px solid #eee;">
                    <a href="/admin/edit/<%= post.id %>" class="btn-edit"><i class="fa-solid fa-pen"></i></a>
                    <form action="/admin/deletar/<%= post.id %>" method="POST" style="display:inline;">
                      <button type="submit" class="btn-delete"
                        onclick="return confirm('Tem certeza que deseja excluir este post?');"><i
                          class="fa-solid fa-trash"></i></button>
                    </form>
                  </td>
                </tr>
                <% }) %>
            </tbody>
          </table>
        </div>
      </div>

    </main>
    <%- include("partials/footer") %>